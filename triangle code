// program to print a triangle 

#include <stdio.h>

int main(int argc, char const *argv[])
{
  int i , j, k;  // used three variables for spaces and stars 
  
  for (i=1 ; i<=5 ; i++)
  {
    for ( j=1 ; j<5-i ;j++)
    {
        printf(" ") ;
    }
    for ( k=1 ; k<= i*2-1 ; k++)
    {
        printf ("*");
    }
  }
    return 0;
}
