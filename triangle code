// program to print a triangle 

#include <stdio.h>

int main(int argc, char const *argv[])
{
  int i , j, k;  // used three variables for spaces , rows  and stars 
  
  for (i=1 ; i<=5 ; i++)  // variable for rows printing 
  {
    for ( j=1 ; j<5-i ;j++)  // variable to provide spaces
    {
        printf(" ") ;
    }
    for ( k=1 ; k<= i*2-1 ; k++)  // variable to provide stars printing 
    {
        printf ("*");
    }
  }
    return 0;
}
